@model TermProject.Models.ShortStoryIndexViewModel

@{ ViewData["Title"] = "Index"; }

<h1>Short Stories</h1>

<form asp-action="Index">
    <input asp-for="SearchQuery" placeholder="Search by title">
</form>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Likes
            </th>
            <th>
                Dislikes
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Stories)
        {
<tr>
    <td>
        <a asp-controller="Comments" asp-action="Index" asp-route-shortStoryID="@item.ID">
            @Html.DisplayFor(modelItem => item.Title)
        </a>
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Likes)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Dislikes)
    </td>
    <td>
        <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
        <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
    </td>
</tr>}
    </tbody>
</table>
